	<flow name="get:\customers:experiencie-api-brigthmart-config">
		<bright-mart-experience-api:get-customers doc:name="Invoke Process API - Get Customers" doc:id="5cd326f1-a71f-42e9-bf0b-8e99d0e0b1d9" config-ref="BrightMart_Experience_API_Config" x-customers-source='"system-salesforce-api"'/>
		<ee:transform doc:name="Transform Message" doc:id="fe461f2a-8e6f-4292-b59b-d030826c0a24" >
