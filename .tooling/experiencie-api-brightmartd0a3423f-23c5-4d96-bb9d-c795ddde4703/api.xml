				<ee:set-payload ><![CDATA[%dw 2.0
output application/java
---
{
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
			
	</flow>
    <flow name="post:\customers:application\json:experiencie-api-brigthmart-config">
		<set-variable value="#[payload]" doc:name="Save Incoming Request" doc:id="90a9b57e-c3ef-40d6-b48e-b24079525a4c" variableName="req"/>
		<bright-mart-experience-api:create-customer doc:name="Create customer" doc:id="6adfb6a2-892a-4dad-893b-bf8e9a67edf7" config-ref="BrightMart_Experience_API_Config">
			<bright-mart-experience-api:create-customer-request-data ><![CDATA[#[{
            id: vars.req.id,
            firstName: vars.req.firstName,
            lastName: vars.req.lastName,
            email: vars.req.email,
            phone: vars.req.phone,
            birthDate: vars.req.birthDate,
            city: vars.req.city,
            state: vars.req.state,
            country: vars.req.country
        }]]]></bright-mart-experience-api:create-customer-request-data>
		</bright-mart-experience-api:create-customer>
		<ee:transform doc:name="Transform Message" doc:id="a872e337-b735-4fb2-81e9-6496b80ff5d1" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
    message: "Customer created successfully",
    dbStatus: payload.dbStatus,
    salesforceStatus: payload.salesforceStatus,
    dbId: payload.dbId,
    salesforceId: payload.salesforceId
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
    </flow>
</mule>
